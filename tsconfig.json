{
	"compilerOptions": {
		"module": "CommonJS",
		"allowJs": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2022",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"plugins": [
			{}
		]
	},
	"include": [
		"src/**/*",
		"__test__/**/*",
	]
}